<% form_for([:admin, artist], :html => { :multipart => true }) do |f| %>
  <%= render "shared/error_messages", :target => artist %>

  <ul>
    <li><%= f.label :section %>
      <%= select("artist", "section", [["regular", 1], ["required listening", 2]]) %></li>
    <li><%= f.label :name %>
      <%= f.text_field :name, :class => "text", :size => "30" %></li>
    <li><%= f.label :bio %>
      <%= f.text_area :bio, :class => "text", :cols => "40", :rows => "15" %></li>
    <li><%= f.label :avatar %>
      <%= f.file_field :avatar %></li>
    <li><%= f.submit "Submit" %></li>
  </ul>
<% end %>
