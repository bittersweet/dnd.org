<%- title("Artists") %>

<h1>Artists</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <%- @artists.each do |a| -%>
    <%= content_tag :tr, :id => "artist_#{a.id}", :class => cycle('odd', 'even') do %>
      <td><%= link_to a.name, artist_path(a) %></td>
      <td><%= link_to "Edit", edit_admin_artist_path(a) %></td>
      <td><%= link_to "Delete", admin_artist_path(a.id), :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  <%- end -%>
</table>
