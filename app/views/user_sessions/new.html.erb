<div id="dialog">
  
  <h1>denachtdienst.org login</h1>
  
  <% form_for @user_session, :url => user_session_path do |f| %>

    <ul>
      <li><%= f.label :login %>
      <%= f.text_field :login, :class => "text", :size => "20" %></li>
      <li><%= f.label :password %>
      <%= f.password_field :password, :class => "text" %></li>
      <li><%= f.submit "Login" %></li>
    </ul>
  <% end %>
  
</div>
