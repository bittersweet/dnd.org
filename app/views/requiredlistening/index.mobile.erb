<% title("Required Listening") -%>

<ul class="rounded">
  <% if @artists.any? -%>
    <% @artists.each do |a| -%>
      <li class="arrow">
        <%= link_to a.name, :controller => 'requiredlistening', :action => 'show', :id => a.to_param %>
      </li>
    <% end -%>
  <% else -%>
    <li>No artists yet</li>
  <% end -%>
</ul>
