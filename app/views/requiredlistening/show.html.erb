<% title "Required Listening" %>

<% if @tracks.any? -%>
  <ul class="grid_8 tracklist">
    <% @tracks.each_with_index do |t, i| -%>
      <li id="track-<%= i %>", class="track <%= cycle('even_neg', 'odd_neg') %>">
        <h2><%= link_to t.name, track_path(t), :id => i, :class => "hide" %></h2>
        <%= link_to "play", track_download_path(t), :class => 'play' %>
        <%= t.name %>
        <span class="track_meta">
          <%= link_to image_tag("info.png", :width => 16), t, :class => 'noplay' %>
          <% if t.artistlink && t.buylink -%>
            <%= link_to image_tag("home.png", :width => 16), t.artistlink, :class => 'noplay', :target => '_blank' %>
            <%= link_to image_tag("buy.png", :width => 16), t.buylink, :class => 'noplay', :target => '_blank' %>
          <% end -%>
        </span>
      </li>
    <% end -%>
  </ul>
<% else -%>
  <p>No other tracks yet</p>
<% end -%>

<div class="grid_4">
  <div id="rl_artist">
    <%= image_tag @artist.avatar(:medium), :width => 280 %>
    <p><%= simple_format(@artist.bio) %></p>
  </div>
  <div id="disclaimer">
    <h4>Disclaimer</h4>
    <p>All tracks are provided with the best intentions purely to promote the
      music. If you are a copyright holder and don't want your material available
      for listening, please get <a href="mailto:markmulder@gmail.com">in touch</a>.</p>
  </div>
</div>
