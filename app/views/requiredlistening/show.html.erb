<% title "Required Listening" %>

<% if @tracks.any? -%>
  <ul class="grid_7 tracklist">
    <% @tracks.each_with_index do |t, i| -%>
      <li id="track-<%= i %>", class="<%= cycle('track even_neg', 'track odd_neg') %>">
        <h2><%= link_to t.name, track_path(t), :id => i, :class => "negative track_url" %></h2>
        <%= link_to "play", track_download_path(t), :class => 'play' %>
        <%= t.name %>
        <span class="track_meta">
          <%= link_to image_tag("info.png", :width => 16), t %>
          <% if t.artistlink && t.buylink -%>
            <%= link_to image_tag("home.png", :width => 16), t.artistlink %>
            <%= link_to image_tag("headphone.png", :width => 16), t.buylink %>
          <% end -%>
        </span>
      </li>
    <% end -%>
  </ul>
<% else -%>
  <p>No other tracks yet</p>
<% end -%>

<div class="grid_4 prefix_1">
  <div id="rl_artist">
    <%= image_tag @artist.avatar(:medium), :width => 280 %>
    <p><%= simple_format(@artist.bio) %></p>
  </div>
</div>
