!!!Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title="#{yield(:title)} on deNachtdienst"
    =stylesheet_link_tag 'reset', '960', 'screen', 'player', 'navigation'
    =javascript_include_tag 'jquery-1.3.2.min', 'jquery.jplayer', 'application'
    =yield(:head)
  %body
    #header
      .container_12
        #logo{:class => 'grid_12'}
          =link_to image_tag('logo.png'), root_path
    #wrapper{:class => 'container_12'}
      #flash_container{:class => 'grid_12'}
        -flash.each do |name, msg|
          =content_tag :div, msg, :id => "flash_#{name}"

      =yield

    #jplayer
    #player
      #player_container
        %h3#player_song_title

        %ul#player_controls
          %p#player_play play
          %li#player_pause pause

        #play_time
        #player_progress
          #player_progress_load_bar
            #player_progress_play_bar

    =javascript_include_tag 'player'
